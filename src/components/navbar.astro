---
import { Icon } from 'astro-icon/components';
---

<div class="navbar-wrapper">
  <div class="navbar rounded-lg backdrop-blur shadow">
    <div class="flex-1">
      <button class="btn glass">
        <Icon name="mage:note-fill" />
        <span class="navbar__title">nesb01t</span>
        <div class="navbar__subtitle">web & game buffs</div>
      </button>
    </div>
    <div class="flex-none gap-2">
      <a class="btn btn-ghost" href="/article">
        <Icon name="mage:folder-2-fill" />
        article</a>
      <a class="btn btn-ghost" href="/project">
        <Icon name="mage:box-3d-fill" />
        project</a>
      <a class="btn btn-ghost" href="/about">
        <Icon name="mage:water-drop-fill" />
        about</a>
    </div>
  </div>
</div>
<div class="h-[140px]"></div>

<style>
    .navbar-wrapper {
        @apply fixed p-8 top-0 left-0 right-0 z-10;
    }

    .navbar__subtitle {
        @apply text-primary font-light;
    }

    @media (max-width: 800px) {
        .navbar__subtitle {
            @apply hidden;
        }
    }
</style>
