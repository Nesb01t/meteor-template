  linux = 'logos:ubuntu',
  markdown = 'logos:markdown',
  star = 'logos:blogger',
  unreal = 'logos:unrealengine-icon',
  vue = 'logos:vue',
  nuxtjs = 'logos:nuxt-icon',
  vueuse = 'logos:vueuse',
  nextjs = 'logos:nextjs-icon',
  react = 'logos:react',
  svelte = 'logos:svelte-icon',
  hexo = 'logos:hexo',
  element = 'logos:element',
  antd = 'logos:ant-design',
  headless = 'logos:headlessui-icon',
  d3js = 'logos:d3',
