  tailwind = 'logos:tailwindcss-icon',
  sass = 'logos:sass',
  animejs = 'logos:adobe-animate',
  gis = 'logos:leaflet',
  electron = 'logos:electron',
  tauri = 'logos:tauri',
  ionic = 'logos:ionic-icon',
  capacitor = 'logos:capacitorjs-icon',
  flutter = 'logos:flutter',
  unity = 'logos:unity',
  avalonia = 'logos:dotnet',
