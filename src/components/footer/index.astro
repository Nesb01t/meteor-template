    name: 'Juejin',
    link: 'https://juejin.cn/user/1128536414880599'
  },
  //https://www.superbed.cn/
  {
    icon: 'mingcute:pic-fill',
    name: 'Superbed',
    link: 'https://www.superbed.cn/'
