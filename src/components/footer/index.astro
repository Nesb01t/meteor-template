<style lang="scss">
  .footer {
    @apply flex items-center justify-center;
    @apply h-[80px] mt-[80px] w-full;

    color: #aaa;
    background: repeating-linear-gradient(
                    45deg,
                    #222,
                    #222 10px,
                    #111 10px,
                    #111 20px
    );

    &-meteor {
      @apply flex flex-col justify-center items-start gap-0;
      @apply text-xs;
    }

    &-sites {
      @apply flex items-center gap-4;

      &__title {
        @apply text-xs;
      }

      &__item {
        @apply flex flex-col items-center justify-center text-xs;
        @apply ml-4 cursor-pointer;
        color: #9d9f8b;
      }
    }
  }
</style>
