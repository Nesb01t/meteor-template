---
import BaseLayout from '../layouts/base/index.astro';
import { getBaseName } from '../utils/route';
import { parseArticles } from '../utils/glob';


const posts = await Astro.glob('../content/article/*.md');
const articles = parseArticles(posts);
---

<BaseLayout>
  <div class="name">
    {articles.map((a) =>
      (
        <a href={a.title}>{a.title}</a>
      ))}
  </div>
</BaseLayout>

<style>
    .name > div {
        @apply h-24;
    }
</style>
