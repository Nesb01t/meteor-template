---
import ProjectList from '@components/project/list.astro';
import TechStack from '@components/tech-stack/index.astro';
import BaseLayout from '@layouts/base/index.astro';
import { Icon } from 'astro-icon/components';
import { HeroCard } from '@components/hero-card';
import { Badge } from '@components/badge';
---

<BaseLayout>
  <div class="index">
    <HeroCard title="nesb01t's blog" desc={
      [
        '👋 你好啊, 这里是 nesb01t 的博客',
        '我来自 cn, 作为前端 & 游戏开发, 目前大三在读',
      ]
    } />

    <TechStack />

    <ProjectList />
  </div>
</BaseLayout>

<style lang="scss">
  .index {
    @apply w-full h-full flex flex-col gap-4;
  }

  @keyframes key-color {
    0% {
      color: #a22b2b77;
    }
    50% {
      color: #28972877;
    }
    100% {
      color: #30309c77;
    }
  }

  .anime-color {
    animation: key-color 5s infinite ease;
  }
</style>
