<style lang="scss">
  .index {
    @apply w-full h-full flex flex-col gap-4;
    &-hero {
      @apply w-full p-6 rounded-xl;
      background: linear-gradient(90deg, #ededed81 0%, #edfbff99 100%);
    }

    &-tech {
      @apply p-6 rounded-xl;
      background: linear-gradient(90deg, #e7f3d8bf 0%, #bbf0ff99 100%);

      &__block {
        @apply p-4 flex flex-wrap gap-[60px];
      }
    }
  }

  .app-title {
    @apply text-lg font-semibold my-2;
  }

  .app {
    @apply flex justify-between items-center gap-1 text-sm w-[90px];
  }

  @media screen and (max-width: 768px) {
    .show-only-large-screen {
      @apply hidden md:block;
    }
  }

  @keyframes key-color {
    0% {
      color: #a22b2b77;
    }
    50% {
      color: #28972877;
    }
    100% {
      color: #30309c77;
    }
  }

  .anime-color {
    animation: key-color 5s infinite ease;
  }
</style>
